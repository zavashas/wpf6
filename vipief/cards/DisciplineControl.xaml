<UserControl x:Class="vipief.cards.DisciplineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vipief.cards"
             mc:Ignorable="d" d:DesignWidth="400" Height="70">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkbox" HorizontalAlignment="Left" Margin="5,0,0,0" Height="60" VerticalAlignment="Center" Width="60" VerticalContentAlignment="Center">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="3" ScaleY="3" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Image x:Name="picture" Grid.Column="1" HorizontalAlignment="Left" Height="60" Width="60" Source="/Images/c#.png" />
        <Label x:Name="DisciplineName" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" FontSize="30"/>
    </Grid>
</UserControl>
